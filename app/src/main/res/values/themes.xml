<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDPACameraCensor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- <style name="Theme.PDPACameraCensor" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.PDPACameraCenso.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- <style name="Theme.PDPACameraCensor" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_color</item>

    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Theme.PDPACameraCensor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PDPACameraCensor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PDPACameraCensor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#fbb040</item>
    </style>

    <style name="Theme.PDPACameraCensor.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- <style name="Theme.PDPACameraCensor" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_gray</item>-->
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/main_gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor">@color/main_color</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>


</resources>