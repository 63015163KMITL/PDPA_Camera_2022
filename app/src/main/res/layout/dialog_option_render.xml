<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_bottom_black"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_round_gray"
            android:layout_width="100dp"
            android:layout_height="7dp"/>

        <RelativeLayout
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="Export Setting"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/button_render_video"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:text="EXPORT"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_round_gray"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <TextView
                android:id="@+id/textview_vide_detail"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:text="TIME : 00:05:00"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textColor="@color/white"
                android:text="Video name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_video_name"
                    android:textColor="#888"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="#00000000"
                    android:text="PDPA_Video_0001.mp4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Frame rate"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_frame_rate_selector"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

            </LinearLayout>

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="Resolution"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner_video_resol_selector" android:stateListAnimator="@drawable/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>