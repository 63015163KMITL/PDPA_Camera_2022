<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_profile"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:cardCornerRadius="80dp">

            <ImageView
                android:id="@+id/psImageView"
                android:src="@drawable/aaa"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:background="@drawable/bg_round_white"
            android:layout_marginTop="100dp"
            android:paddingTop="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edittext_name_profile"
                android:layout_marginTop="30dp"
                android:background="#EEEEEE"
                android:padding="10dp"
                android:gravity="center"
                android:text="Name Lastname"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Increase efficiency"
                android:textSize="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/update_face_camera"
                android:background="@drawable/bg_round_stroke"
                android:layout_below="@id/edittext_name_profile"
                android:gravity="center"
                android:text="Update from camera"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/update_face_gallery"
                android:layout_marginTop="10dp"
                android:layout_below="@id/edittext_name_profile"
                android:background="@drawable/bg_round_stroke"
                android:gravity="center"
                android:text="Update from gallery"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_delete"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="DELETE"
                    android:textSize="18dp"
                    android:textColor="#CCC"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <Button
                    android:id="@+id/button_save"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="SAVE"
                    android:textSize="18dp"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>