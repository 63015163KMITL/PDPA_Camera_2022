<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_bottom_black"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_round_gray"
            android:layout_width="100dp"
            android:layout_height="7dp"/>

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="Shape Option"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/button_shape_ok"
                android:layout_alignParentRight="true"
                android:text="OK"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="SHAPE"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup_shape">

                    <RadioButton
                        android:id="@+id/radio_shape_reg"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="REGULAR"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/radio_shape_cir"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:text="CIRCLE"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="COLOR"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup_color_picker">

                    <RadioButton
                        android:id="@+id/radio_color_black"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                    <RadioButton
                        android:id="@+id/radio_color_white"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                    <RadioButton
                        android:id="@+id/radio_color_red"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                    <RadioButton
                        android:id="@+id/radio_color_yellow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"/>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="SIZE"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="20dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_shape_size"
                    android:textColor="@color/white"
                    android:text="100"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <SeekBar
                    android:id="@+id/seekbar_shape_size"
                    android:progressDrawable="@drawable/seek_bar"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar_drawable_thumb"
                    android:progress="50"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>