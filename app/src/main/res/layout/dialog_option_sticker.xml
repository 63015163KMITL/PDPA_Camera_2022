<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_round_bottom_black"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_round_gray"
            android:layout_width="100dp"
            android:layout_height="7dp"/>

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="Sticker Option"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/button_sticker_ok"
                android:layout_alignParentRight="true"
                android:text="OK"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="Select sticker"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridView
                    android:id="@+id/GridView_stricker"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="5"
                    android:columnWidth="10dp"
                    android:listSelector="@color/main_color"/>

            </LinearLayout>


            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:text="SIZE"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="20dp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_sticker_size"
                    android:textColor="@color/white"
                    android:text="100"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <SeekBar
                    android:id="@+id/seekbar_sticker_size"
                    android:progressDrawable="@drawable/seek_bar"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar_drawable_thumb"
                    android:progress="50"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>